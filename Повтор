#include <iostream> //стандарт библиотека. инпут оутпут консоль

using namespace std; //стандартное пространство имен. не пишем дальше стд

int main() { // функция main. возвращает число int. скобки - не принимает параметров от ф-ции 
    // это комментарий, здесь можно писать пояснения
    return 0; //команда завершения
} 

-------------------------------------------------------------------

#include <iostream>

using namespace std;

int main() {
    cout << (2 + 3) * 5;
    return 0;
}

------------------------------------------------------------

// +           сложение
//   −           вычитание
//   *           умножение
//   /           деление нацело
//   %           вычисление остатка от деления

int x, y; // хотим две переменные, целые
x = 2 + 3; // хотим присвоить значение
y = x * 4;
----------------------------------------------------------
#include <iostream>

using namespace std;

int main() {
    int a, b;
    cin >> a >> b; // берем значение
    cout << a + b;  //вывод
    return 0;
}
--------------------------------------------------
cin >> a >> b; // если хотим считать несколько переменных. по очереди
-----------------------------------------------------
#include <iostream>

using namespace std;

int main() {
    int t, v, g = 10;
    cin >> t;
    v = g * t;
    int vm = v / 2;
    int s = vm * t;
    cout << s;
    return 0;
}
--------------------------------------------------------------
