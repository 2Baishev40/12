#include <iostream> //стандарт библиотека. инпут оутпут консоль

using namespace std; //стандартное пространство имен. не пишем дальше стд

int main() { // функция main. возвращает число int. скобки - не принимает параметров от ф-ции 
    // это комментарий, здесь можно писать пояснения
    return 0; //команда завершения
} 

-------------------------------------------------------------------
ЦЕЛЫЕ ЧИСЛА
----------------------------------------------------------------------
#include <iostream>

using namespace std;

int main() {
    cout << (2 + 3) * 5;
    return 0;
}

------------------------------------------------------------

// +           сложение
//   −           вычитание
//   *           умножение
//   /           деление нацело
//   %           вычисление остатка от деления

int x, y; // хотим две переменные, целые
x = 2 + 3; // хотим присвоить значение
y = x * 4;
----------------------------------------------------------
#include <iostream>

using namespace std;

int main() {
    int a, b;
    cin >> a >> b; // берем значение
    cout << a + b;  //вывод
    return 0;
}
--------------------------------------------------
cin >> a >> b; // если хотим считать несколько переменных. по очереди
-----------------------------------------------------
#include <iostream>

using namespace std;

int main() {
    int t, v, g = 10;
    cin >> t;
    v = g * t;
    int vm = v / 2;
    int s = vm * t;
    cout << s;
    return 0;
}
--------------------------------------------------------------
УСЛОВИЯ
------------------------------------------------------------
int a;
cin >> a;
if (a > 0) {
    cout << a;  //если условие выполнено, то будут выполняться действия, заключённые в фигурные скобки после if
} else {  //иначе
    cout << -a;
}
---------------------------------------------------------------
==           равно
   !=           не равно
   <            меньше
   >            больше
   <=         меньше или равно
   >=         больше или равно
   -------------------------------------------------------------
int eyes, legs;
cin >> eyes >> legs;
if (eyes == 8 && legs == 8) { //и. 
// Также существует логическая связка «или», которая обозначается символами «||», и унарная операция «отрицание» — её знак «!» ставится перед выражением.
      cout << "AAAAA!!!";
} 
---------------------------------------
ЦИКЛ ПОКА
_________________________________________
int i, n; //завели переменную и счет
cin >> n; //ввод
i = 1; //счет 1
while (i <= n) { //пока значение счетчика не превысит N, необходимо выводить его текущее значение и каждый раз увеличить его на единицу
    cout << i << " ";
    i = i + 1;
} 
-------------------------------------------------------------------------
int n, i;
i = 1;
while (1) {
    cout << i;
    i = i + 1;
    if (i > 100)
        break; //остановись
}
-----------------------------------------------------
ДЕЙСТВИТЕЛЬНЫЕ ЧИСЛА+
-----------------------------------------------------
double x, y;
y = 3.1415; //с точкой!
cout << setprecision(3) << fixed; //Числа с заданным количеством знаков после точки выводятся так
