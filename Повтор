#include <iostream>

using namespace std;

int main() {
    cout << (2 + 3) * 5;
    return 0;
}

------------------------------------------------------------

// +           сложение
//   −           вычитание
//   *           умножение
//   /           деление нацело
//   %           вычисление остатка от деления

int x, y; // хотим две переменные, целые
x = 2 + 3; // хотим присвоить значение
y = x * 4;
